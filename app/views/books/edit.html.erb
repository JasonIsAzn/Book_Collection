<div class="container">
  <h1>EDIT BOOK</h1>
  <%= form_for(@book, method: 'delete') do |f| %>
    <div >
      <%= f.submit("Delete Book") %>
    </div>
  <% end %>
  <%= form_with model: @book do |form| %>
    <%= form.text_field :title, placeholder: "title" %>
    <%= form.text_field :author, placeholder: "author" %>
    <%= form.text_field :price, placeholder: "price" %>
    <%= form.text_field :published_date, placeholder: "published date" %>
    <%= form.submit %>
  <% end %>
</div>
